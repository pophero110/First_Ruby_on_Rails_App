

<div class="pl-5 pr-5">
<h1 class="mt-4">Sales</h1>
<% @sales.drop(1).each_with_index do |sale, index| %>
<div class="d-flex">
    <h3><%= @sales[0][index] %></h3>
    
</div>
    

<table class="table table-striped table-bordered table-light">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Foreign Name</th>
      <th scope="col">Quantity Sold</th>
      
    </tr>
  </thead>
  <tbody>
    <% sale.each do |product| %>
    <tr>
      <td class="text-capitalize"><%= product[0] %></td>
      <td><%= product[1] %></td>
      <td><%= product[2] %></td>
      
      </tr>
    <% end %>
    

  </tbody>
</table>
  

<% end %>
  
</div>
</div>

